<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelpDesk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#4FB0E3</item>
        <item name="colorOnPrimary">#63597D</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HelpDesk.Fullscreen" parent="Theme.HelpDesk">
        <item name="android:actionBarStyle">@style/Widget.Theme.HelpDesk.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="ThemeOverlay.HelpDesk.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white</item>
        <item name="fullscreenTextColor">#4FB0E3</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>
</resources>